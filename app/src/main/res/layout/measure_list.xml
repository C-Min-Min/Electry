<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:padding="4dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/textViewId"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="338dp"
            android:layout_marginRight="338dp"
            android:text="id: 1"
            android:fontFamily="@font/productsans_black"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textViewStart_Time"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="197dp"
            android:layout_marginRight="197dp"
            android:text="start_time: 86400"
            android:fontFamily="@font/productsans_black"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textViewPower"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="power: 5000"
            android:fontFamily="@font/productsans_black"
            android:textColor="@color/black"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>